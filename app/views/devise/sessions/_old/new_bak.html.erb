
<!-- NEW FORM -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div style="width: 22rem;" class="text-center">
  <h2>Log In</h2>
  <p>&nbsp;</p>

  <!-- Email input -->
  <div class="form-outline mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"  %>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <% if devise_mapping.rememberable? %>
      <div class="form-check">
         <%= f.check_box :remember_me, class: "form-check-input"  %>
        <label class="form-check-label" for="form1Example3"> Remember me </label>
      </div>
      <% end %>
    </div>

    <div class="col">
      <!-- Simple link -->
      <%= link_to "Forgot password?", new_password_path(resource_name) %>
    </div>
  </div>

  <!-- Submit button -->
  <%= f.submit "Log in", class: "btn btn-primary btn-block"  %>
</div>
</form>
<% end %>


<% render "devise/shared/links" %>
