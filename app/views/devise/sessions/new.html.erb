<section class="vh-100" title="login">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
          <%= render 'layouts/alerts' %>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
              Welcome to The World
            </h3>

            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form2Example18", class: "form-control form-control-lg", placeholder: "Email"  %>
              <label class="form-label" for="form2Example18">Email address</label>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, autocomplete: "current-password", id: "form2Example28", class: "form-control form-control-lg", placeholder: "Password"  %>
              <label class="form-label" for="form2Example28">Password</label>
            </div>


            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                  <!-- Checkbox -->
                  <% if devise_mapping.rememberable? %>
                  <div class="form-check">
                     <%= f.check_box :remember_me, class: "form-check-input"  %>
                    <label class="form-check-label" for="form1Example3"> Remember me </label>
                  </div>
                  <% end %>
                </div>

                <div class="col">
                  <!-- Simple link -->
                  <%= link_to "Forgot password?", new_password_path(resource_name) %>
                </div>
            </div>

            <div class="pt-1 mb-4 text-center">
              <%= f.submit "Login", class: "btn btn-info btn-lg btn-block", data: { turbo: false } %> 
              <%= link_to "Register", new_user_registration_path, class:"btn btn-secondary btn-lg btn-block" %>
            </div>

          </div>
          </form>
          <% end %>


        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <%= image_tag "login/login1.jpg", alt: "Login image", class: "w-100 vh-100", style: "object-fit: cover; object-position: left;"   %>
      </div>
    </div>
  </div>
</section>



<% render "devise/shared/links" %>
