<section class="vh-100" title="login">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
            <%= render 'layouts/alerts' %>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
              Forgot Your Password?
            </h3>

            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form2Example18", class: "form-control form-control-lg", placeholder: "Email"  %>
              <label class="form-label" for="form2Example18">Email address</label>
            </div>

            <div class="pt-1 mb-4 text-center">
              <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-lg btn-block",  data: { turbo: false } %>
            </div>

          </div>
          </form>
          <% end %>


        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <%= image_tag "login/login1.jpg", alt: "Login image", class: "w-100 vh-100", style: "object-fit: cover; object-position: left;"   %>
      </div>
    </div>
  </div>
</section>

<% render "devise/shared/links" %>
